# POS Backend - example environment variables for production
# Copy this file to .env and fill in secure values (do NOT commit secrets)

# Server
PORT=4000
NODE_ENV=production

# Database
# For Postgres: postgres://user:pass@host:5432/dbname
DATABASE_URL=
# Or for SQLite (local): leave DATABASE_URL unset and set DATABASE_PATH
DATABASE_PATH=./database.db

# Security
JWT_SECRET=your-long-random-jwt-secret
COOKIE_DOMAIN=yourdomain.com

# Storefront integration
STOREFRONT_API_KEY=
STOREFRONT_API_SECRET=

# Mailer (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Frontend
FRONTEND_URL=https://pos.yourdomain.com

# Notes:
# - In production, set JWT_SECRET in the environment to prevent accidental rotation.
# - Use HTTPS and terminate TLS at a proxy or load balancer.
